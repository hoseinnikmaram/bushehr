<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irprogram.ebook">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/marz"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".WelcomActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/splash">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".main_page"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".tblOfContent"
            android:label="@string/title_activity_tbl_of_content"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".book_content"
            android:label="@string/title_activity_book_content"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".tblOfFavoriteBooks"
            android:label="@string/title_activity_tbl_of_favorite_books"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".search"
            android:label="@string/title_activity_search"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".settings"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".list_activity"
            android:label="لیست"></activity>
    </application>

</manifest>